{
  "name": "@jpmorganchase/mosaic-site-mdx-loader",
  "description": "Mosaic - MDX Site Loader",
  "version": "0.1.0-beta.38",
  "author": "",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "git@github.com:jpmorganchase/mosaic.git",
    "directory": "packages/site-mdx-loader"
  },
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./index.css": "./dist/index.css",
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "node": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "npm-run-all --parallel build:*",
    "build:types": "tsc",
    "build:components": "node  ./scripts/bundle.mjs",
    "clean": "npx del-cli 'dist/**' && find . -type d -empty -delete",
    "lint": "eslint --ignore-pattern \"**/__tests__/**\"",
    "dev": "node ./scripts/bundle.mjs watch"
  },
  "devDependencies": {
    "@jpmorganchase/mosaic-types": "^0.1.0-beta.38",
    "del-cli": "^4.0.1",
    "esbuild": "0.17.19",
    "esbuild-node-externals": "^1.7.0",
    "fast-glob": "^3.2.7",
    "typescript": "^4.8.3"
  },
  "dependencies": {
    "@jpmorganchase/mosaic-mdx-components-client": "^0.1.0-beta.38",
    "@jpmorganchase/mosaic-store": "^0.1.0-beta.38",
    "@jpmorganchase/mosaic-schemas": "^0.1.0-beta.38",
    "@types/node": "^18.15.3",
    "deepmerge": "^4.2.2",
    "gray-matter": "^4.0.3",
    "zod": "^3.19.1"
  }
}
